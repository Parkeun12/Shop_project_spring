<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/mains.css" rel="stylesheet" type="text/css">
    <link href="/css/side.css" rel="stylesheet" type="text/css">
    <link href="/css/login.css" rel="stylesheet" type="text/css">
    <title>login</title>
    <script src="/js/jquery-3.7.0.min.js"></script>
</head>
<body>
<header>
    <nav class="icon_side">
        <div>
            <div class="icon_member">
                <a href="">
                    <img src="/img/memberB.png" alt="member">
                </a>
            </div>
            <div class="icon_basket">
                <a href="">
                    <img src="/img/basket.png" alt="basket">
                </a>
            </div>
        </div>
    </nav>
</header>
<section>
    {{>layouts/leftside}}
</section>
    <!-- 로그인 영역 -->
    <!--이 부분 수정해보기 csrf 사용-->
    <form action="/users/login" method="post" role="form">
<!--        추가해본 거-->
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <div class="container">
            <div id="text">
                <p><h2>로그인</h2></p>
            </div>
            <div id="wrap">
                <div class="text"><h3>Member Login</h3></div>
                <div class="input">
                    <!-- 아이디 미입력 후 다음 단계 이동 시 나타나는 오류 메시지 -->
                    <label for="username" id="ID_Chk" style="display: none; color: red; font-size: 13px; font-weight: bold; position: relative; top: 60px; right: 290px;">
                        * 필수 입력
                    </label>
                    <input type="text" name="username" id="username" onfocusout="CheckValue()">

                    <input type="password" name="password" id="password" placeholder="PASSWORD" onfocusout="CheckValue1()">
                    <!-- 비밀번호 미입력 후 다음 단계 이동 시 나타나는 오류 메시지 -->
                    <label for="password" id="PASSWORD_Chk" style="display: none; color: red; font-size: 13px; font-weight: bold; position: relative; top: 90px; right: 290px;">
                        * 필수 입력
                    </label>
                    <!-- 아이디 찾기, 비밀번호 찾기, 회원가입 이동 가능한 경로 -->
                    <div class="move">
                        <img src="/img/check.png" style="opacity: 0.5; width: 20px; height: 20px; cursor: pointer;"><span style="opacity: 0.6; font-size: 13px; font-weight: bold;"><a href=>아이디 찾기</a></span>
                        <img src="/img/check.png" style="opacity: 0.5; width: 20px; height: 20px; cursor: pointer;"><span style="opacity: 0.6; font-size: 13px; font-weight: bold;"><a href="">비밀번호 찾기</a></span>
                        <span class="join" style="opacity: 0.6; font-size: 13px; font-weight: bold;"><a href="/users/new">회원가입</a></span>
                    </div>
                    <input value="로그인" type="submit" name="submit">
                </div>
            </div>
        </div>
    </form>
    <div id="footer">
        <div class="shop_footer">
            <div class="textBox">
                <h1>
                    Footer 영역
                </h1>
            </div>
        </div>
    </div>

    <script>
        //로그인 실패 알럿 추가



        //필수 입력 문구, 테두리 색 변경 --> 빨간색으로
        function CheckValue() {
                    let _ID = document.getElementById("Id").value;
                    let ID_Label = document.getElementById("ID_Chk");

                    if (_ID === "" || _ID == undefined) {
                        ID_Label.style.display = "inline-block";
                        document.getElementById("Id").style.border = "1px solid red";
                        document.getElementById("Id").style.width = "350px";
                        document.getElementById("Id").style.height = "40px";
                    }
                    else {
                        ID_Label.style.display = "none";
                        document.getElementById("Id").style = "none";
                    }
                }

                function CheckValue1() {
                    let _PASSWORD = document.getElementById("Pw").value;
                    let _PASSWORD_Label = document.getElementById("PASSWORD_Chk");

                    if (_PASSWORD === "" || _PASSWORD == undefined) {
                        _PASSWORD_Label.style.display = "block";
                        document.getElementById("Pw").style.border = "1px solid red";
                        document.getElementById("Pw").style.width = "350px";
                        document.getElementById("Pw").style.height = "40px";
                    }
                    else {
                        _PASSWORD_Label.style.display = "none";
                        document.getElementById("Pw").style = "none";
                    }

                }
                //메인 메뉴 슬라이드 부분
            jQuery(document).ready(function () {
        $('.navi>li').mouseover(function () {
            $(this).find('.submenu').stop().slideDown(500);
        }).mouseout(function () {
            $(this).find('.submenu').stop().slideUp(500);
        });
    });
    </script>
</body>
</html>